<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

        <RelativeLayout
            android:id="@+id/focus"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#EAEAEA"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/et_search_image"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:onClick="OntitleCLick"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@drawable/groundblue" />

            <SearchView
                android:id="@+id/et_search_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:iconifiedByDefault="false"
                android:queryHint="输入姓名或事由">

            </SearchView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@id/focus"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="#4BAC4F"
            android:ellipsize="marquee"
            android:gravity="center|left"
            android:onClick="OntitleCLick"
            android:singleLine="true"
            android:text=" 姓名"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_remark3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/focus"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/tv_title3"
            android:background="#4CAF50"
            android:gravity="center|left"
            android:onClick="OntitleCLick"
            android:text="事由"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_money3"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/focus"
            android:layout_alignParentRight="false"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/tv_remark3"
            android:background="#4CAF50"
            android:gravity="center|left"
            android:onClick="OntitleCLick"
            android:text="金额"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/focus"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/tv_money3"
            android:background="#4CAF50"
            android:gravity="center|left"
            android:onClick="OntitleCLick"
            android:text="日期"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="600dp"
            android:layout_below="@id/tv_title3">

        </ListView>

        <View
            android:id="@+id/oneLine2"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/list_view"
            android:background="@drawable/bg_rectangle"></View>

        <View
            android:id="@+id/oneLine"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@id/list_view"
            android:layout_marginTop="40dp"
            android:background="#E4D8C4"></View>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/list_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:background="#00FF0000"
            android:onClick="addAccount"
            android:scaleType="fitXY"
            android:src="@drawable/tianjia" />

    <ImageButton
        android:id="@+id/expdata"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/oneLine"
        android:layout_alignParentRight="false"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:background="#00FF0000"
        android:onClick="importExportDataFromCsv"
        android:scaleType="centerInside"
        android:src="@drawable/btn_export"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/things"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/oneLine"
        android:layout_alignParentRight="false"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/expdata"
        android:background="#00FF0000"
        android:onClick="onThings"
        android:scaleType="centerInside"
        android:src="@drawable/btn_thing"
        android:visibility="visible" />

        <ImageButton
            android:id="@+id/contacts"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/oneLine"
            android:layout_alignParentRight="false"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="38dp"
            android:layout_marginRight="38dp"
            android:layout_toLeftOf="@id/retFlag"
            android:background="#00FF0000"
            android:onClick="onContacts"
            android:scaleType="centerInside"
            android:src="@drawable/btn_contacts"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/retFlag"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@id/oneLine"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="#00FF0000"
            android:onClick="retOnFlag"
            android:scaleType="centerInside"
            android:src="@drawable/btn_return"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/oneLine"
            android:layout_alignParentBottom="false"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/mtotal"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="#FBFAFA"
                android:editable="false"
                android:gravity="right"
                android:inputType="none"
                android:textColor="@android:color/darker_gray" />

            <EditText
                android:id="@+id/mtotal_men"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:background="#FBFAFA"
                android:editable="false"
                android:inputType="none"
                android:textColor="@android:color/darker_gray"
                android:visibility="visible" />
        </RelativeLayout>

</RelativeLayout>