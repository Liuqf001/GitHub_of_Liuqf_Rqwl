<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:gravity="center|top"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonInOut"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_gravity="top|left"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_rectangle"
        android:ellipsize="marquee"
        android:onClick="InOut"
        android:text="收礼"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/et_cost_remark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="事由" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left">

        <AutoCompleteTextView
            android:id="@+id/et_cost_title"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="姓名" />

        <EditText
            android:id="@+id/et_cost_money"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:hint="礼金"
            android:inputType="number|numberDecimal"
            android:textColor="#ffbd27" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top|left">

        <AutoCompleteTextView
            android:id="@+id/et_cost_title2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="姓名2" />

        <EditText
            android:id="@+id/et_cost_money2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:hint="礼金2"
            android:inputType="number|numberDecimal"
            android:textColor="#ffbd27" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top|left">

        <AutoCompleteTextView
            android:id="@+id/et_cost_title3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="姓名3" />

        <EditText
            android:id="@+id/et_cost_money3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:hint="礼金3"
            android:inputType="number|numberDecimal"
            android:textColor="#ffbd27" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top|left">

        <AutoCompleteTextView
            android:id="@+id/et_cost_title4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="姓名4" />

        <EditText
            android:id="@+id/et_cost_money4"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:hint="礼金4"
            android:inputType="number|numberDecimal"
            android:textColor="#ffbd27" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="top|left">

        <AutoCompleteTextView
            android:id="@+id/et_cost_title5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:completionThreshold="0"
            android:hint="姓名5" />

        <EditText
            android:id="@+id/et_cost_money5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:hint="礼金5"
            android:inputType="number|numberDecimal"
            android:textColor="#ffbd27" />
    </RelativeLayout>

    <Button
        android:layout_width="141dp"
        android:layout_height="45dp"
        android:layout_gravity="right|top"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_rectangleok"
        android:onClick="okButton"
        android:text="确认"
        android:textColor="#333333"
        android:textSize="20dp" />

    <com.nanchen.calendarview.MyCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="top|left"
        android:layout_marginTop="10dp">

    </com.nanchen.calendarview.MyCalendarView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/retFlag2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/calendarView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#00FF0000"
            android:onClick="retOnFlag"
            android:scaleType="centerInside"
            android:src="@drawable/btn_return"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>
